<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grayLight">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
			android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
			android:paddingTop="@dimen/_10sdp"
			android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_marginStart="@dimen/_12sdp"
                android:orientation="horizontal">

                <com.sdei.parentIn.customViews.MediumTextView
                    android:id="@+id/txtStu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Julian López"
                    android:textColor="@color/colorDarkText"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight="1"/>

                <com.sdei.parentIn.customViews.MediumTextView
                    android:id="@+id/txtFecNec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="31 May. 2012"
                    android:gravity="start"
                    android:textColor="@color/colorDarkText"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight="1"/>

                <com.sdei.parentIn.customViews.MediumTextView
                    android:id="@+id/txtPadre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Juan López"
                    android:gravity="start"
                    android:textColor="@color/colorDarkText"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight="1"/>
<LinearLayout
    android:layout_width="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
	android:gravity="end"
	android:layout_gravity="end"
    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCrossRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:src="@drawable/ic_right"
					android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_30sdp"/>

</LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lySendMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_purpul_stroke"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_margin="@dimen/_12sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_mail" />

                <com.sdei.parentIn.customViews.SemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/escribir_mensaje_al_tutor"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/grayLight"
				android:layout_marginTop="@dimen/_5sdp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>