<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_supervisor"
    tools:context="com.sdei.parentIn.activities.supervisor.SupervisorLoginActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layoutBottomText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.sdei.parentIn.customViews.BookTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/familias"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_40ssp" />

            <com.sdei.parentIn.customViews.HeavyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/in"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_40ssp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSupervisorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_supervisor_selector"
            android:drawableStart="@drawable/ic_supervisor_email"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColorHint="@color/colorGrayDark"/>

        <EditText
            android:id="@+id/edtSupervisorPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_supervisor_selector"
            android:drawableStart="@drawable/ic_supervisor_pass"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="@string/Contraseña"
            android:inputType="textPassword"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"
            android:singleLine="true"
            android:textColorHint="@color/colorGrayDark"
            android:imeOptions="actionDone"/>


        <com.sdei.parentIn.customViews.RegularTextView
            android:id="@+id/txtForgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/olvidaste_la_contrase_a"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorWhite" />

        <com.sdei.parentIn.customViews.SemiBoldTextView
            android:id="@+id/btnSupervisorLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/bg_blue_round"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="@string/Inicia_Sesión"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutBottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.sdei.parentIn.customViews.RegularTextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/a_n_no_tienes_cuenta"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/colorWhite" />
        <com.sdei.parentIn.customViews.SemiBoldTextView
            android:id="@+id/txtRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="@string/registrate_aqu"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/blue" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
