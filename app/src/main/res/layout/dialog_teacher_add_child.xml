<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:animateLayoutChanges="true"
	android:layout_margin="@dimen/_10sdp"
	android:layout_gravity="center"
	app:cardCornerRadius="@dimen/_5ssp"
	android:elevation="@dimen/_5ssp"
	android:background="@color/white">

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="@dimen/_10sdp"
	android:background="@color/white">

<LinearLayout
	android:layout_width="match_parent"
	android:orientation="horizontal"
	android:layout_height="wrap_content">

	<com.sdei.parentIn.customViews.SemiBoldTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/add_student_manually"
		android:gravity="center"
		android:textSize="@dimen/_12ssp"
		android:textColor="@color/black"/>
		<ImageView
			android:id="@+id/imgClose"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:foreground="?selectableItemBackground"
			android:padding="@dimen/_5sdp"
			android:src="@drawable/ic_close" />
</LinearLayout>
<LinearLayout
	android:layout_width="match_parent"
	android:orientation="horizontal"
	android:layout_marginTop="@dimen/_5sdp"
	android:layout_height="wrap_content">

	<EditText
		android:id="@+id/edtChildFirstName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:layout_marginEnd="@dimen/_5sdp"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_5sdp"
		android:hint="@string/primer_nombre"
		android:textColorHint="@color/grey"
		android:padding="@dimen/_12sdp"
		android:textSize="@dimen/_12ssp"
		android:textColor="@color/black"
		android:singleLine="true"
		android:imeOptions="actionNext"/>

	<EditText
		android:id="@+id/edtChildLastName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_10sdp"
		android:padding="@dimen/_12sdp"
		android:textColorHint="@color/grey"
		android:textColor="@color/black"

		android:hint="@string/Apellido"
		android:textSize="@dimen/_12ssp"
		android:imeOptions="actionNext"
		android:singleLine="true"/>
</LinearLayout>

	<EditText
		android:id="@+id/edtChildBirthDate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginTop="@dimen/_5sdp"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_10sdp"
		android:padding="@dimen/_12sdp"
		android:hint="@string/fecha_nacimiento"
		android:textColorHint="@color/grey"
		android:textColor="@color/black"

		android:inputType="none"
		android:focusable="false"
		android:cursorVisible="false"
		android:textSize="@dimen/_12ssp" />


	<EditText
		android:id="@+id/edtChildIdentityCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginTop="@dimen/_12sdp"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_10sdp"
		android:padding="@dimen/_12sdp"
		android:hint="@string/Cédula"
		android:textColorHint="@color/grey"
		android:textColor="@color/black"

		android:textSize="@dimen/_12ssp"
		android:imeOptions="actionNext"
		android:singleLine="true"/>


	<com.sdei.parentIn.customViews.SemiBoldTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_5sdp"
		android:text="@string/parent_information"
		android:textSize="@dimen/_12ssp"
		android:textColor="@color/black"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/_5sdp"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/edtParentFirstName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:layout_marginEnd="@dimen/_5sdp"
			android:background="@drawable/edit_text_selector"
			android:drawablePadding="@dimen/_5sdp"
			android:hint="@string/primer_nombre"
			android:padding="@dimen/_12sdp"
			android:textSize="@dimen/_12ssp"
			android:singleLine="true"
			android:textColorHint="@color/grey"
			android:textColor="@color/black"

			android:imeOptions="actionNext"/>

		<EditText
			android:id="@+id/edtParentLastName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:background="@drawable/edit_text_selector"
			android:drawablePadding="@dimen/_10sdp"
			android:padding="@dimen/_12sdp"
			android:hint="@string/Apellido"
			android:textSize="@dimen/_12ssp"
			android:imeOptions="actionNext"
			android:textColorHint="@color/grey"
			android:textColor="@color/black"

			android:singleLine="true"/>
	</LinearLayout>


	<EditText
		android:id="@+id/edtParentEmail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginTop="@dimen/_12sdp"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_10sdp"
		android:padding="@dimen/_12sdp"
		android:hint="@string/email"
		android:inputType="textEmailAddress"
		android:cursorVisible="false"
		android:textSize="@dimen/_12ssp"
		android:textColorHint="@color/grey"
		android:textColor="@color/black"
		android:imeOptions="actionDone"/>

	<EditText
		android:id="@+id/edtChildTeacher"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginTop="@dimen/_12sdp"
		android:background="@drawable/edit_text_selector"
		android:drawablePadding="@dimen/_10sdp"
		android:padding="@dimen/_12sdp"
		android:hint="@string/phone_number"
		android:inputType="phone"
		android:cursorVisible="false"
		android:textSize="@dimen/_12ssp"
		android:visibility="gone"
		android:imeOptions="actionDone"/>

	<com.sdei.parentIn.customViews.SemiBoldTextView
		android:id="@+id/btnAddStudent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_5sdp"
		android:background="@drawable/bg_blue_round"
		android:foreground="?selectableItemBackground"
		android:gravity="center"
		android:padding="@dimen/_12sdp"
		android:text="@string/Añadir_Alumno"
		android:textColor="@color/white"
		android:textSize="@dimen/_12ssp" />

</LinearLayout>
</androidx.cardview.widget.CardView>