<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@mipmap/background"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/stroke_toolbar">

		<ImageView
			android:id="@+id/btnBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:foreground="?selectableItemBackground"
			android:padding="@dimen/_12sdp"
			android:src="@mipmap/ic_back_arrow" />

		<com.sdei.parentIn.customViews.SemiBoldTextView
			android:id="@+id/txtTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:padding="@dimen/_12sdp"
			android:text="@string/Inicia_Sesión"
			android:textColor="@color/black"
			android:textSize="@dimen/_14ssp" />

	</RelativeLayout>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:layout_marginTop="@dimen/_60sdp"
			android:orientation="vertical">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@mipmap/logo" />

			<com.sdei.parentIn.customViews.HeavyTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:textColor="@color/black"
				android:textSize="@dimen/_30ssp" />

			<com.sdei.parentIn.customViews.SemiBoldTextView
				android:id="@+id/txtHeader"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_23sdp"
				android:text="@string/Bienvenido_Padre_o_tutor"
				android:textAllCaps="true"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/_14ssp" />

			<com.sdei.parentIn.customViews.RegularTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_2sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:gravity="center"
				android:text="@string/Ingresa_tu_usuario_y_contraseña_para_acceder_a_tu_cuenta"
				android:textColor="@color/black"
				android:textSize="@dimen/_11ssp" />

			<EditText
				android:id="@+id/edtEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_30sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:background="@drawable/edit_text_selector"
				android:drawableStart="@mipmap/ic_email"
				android:drawablePadding="@dimen/_5sdp"
				android:hint="@string/email"
				android:inputType="textEmailAddress"
				android:padding="@dimen/_12sdp"
				android:textSize="@dimen/_12ssp" />

			<EditText
				android:id="@+id/edtPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_12sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:background="@drawable/edit_text_selector"
				android:drawableStart="@mipmap/ic_contrasena"
				android:drawablePadding="@dimen/_5sdp"
				android:hint="@string/Contraseña"
				android:inputType="textPassword"
				android:padding="@dimen/_12sdp"
				android:textSize="@dimen/_12ssp" />


			<com.sdei.parentIn.customViews.SemiBoldTextView
				android:id="@+id/btnLogin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_12sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:background="@drawable/bg_blue_round"
				android:foreground="?selectableItemBackground"
				android:gravity="center"
				android:padding="@dimen/_12sdp"
				android:text="@string/iniciar_sesion"
				android:textColor="@color/white"
				android:textSize="@dimen/_12ssp" />


			<com.sdei.parentIn.customViews.RegularTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_40sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:gravity="center"
				android:text="@string/o_si_eres_nuevo_en_el_el_programa_podras_crear_una_nueva_cuenta_aqu"
				android:textColor="@color/black"
				android:textSize="@dimen/_11ssp" />

			<com.sdei.parentIn.customViews.SemiBoldTextView
				android:id="@+id/btnCreateAccount"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_15sdp"
				android:layout_marginTop="@dimen/_12sdp"
				android:layout_marginEnd="@dimen/_15sdp"
				android:layout_marginBottom="@dimen/_15sdp"
				android:background="@drawable/bg_primary_round"
				android:foreground="?selectableItemBackground"
				android:gravity="center"
				android:padding="@dimen/_12sdp"
				android:text="@string/crear_cuenta"
				android:textColor="@color/white"
				android:textSize="@dimen/_12ssp" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

</LinearLayout>
