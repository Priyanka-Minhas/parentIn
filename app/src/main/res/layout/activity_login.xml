<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginStart="@dimen/_15sdp"
	android:layout_marginEnd="@dimen/_15sdp"
	android:gravity="center_horizontal"
	android:orientation="vertical">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="@dimen/_60sdp"
		android:src="@mipmap/logo" />

	<com.sdei.parentIn.customViews.HeavyTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:textColor="@color/black"
		android:textSize="@dimen/_30ssp" />

	<com.sdei.parentIn.customViews.SemiBoldTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_23sdp"
		android:text="@string/Bienvenido_Padre_o_tutor"
		android:textAllCaps="true"
		android:textColor="@color/colorPrimary"
		android:textSize="@dimen/_14ssp" />

	<com.sdei.parentIn.customViews.RegularTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/_15sdp"
		android:layout_marginTop="@dimen/_2sdp"
		android:layout_marginEnd="@dimen/_15sdp"
		android:gravity="center"
		android:text="@string/Ingresa_tu_usuario_y_contraseÃ±a_para_acceder_a_tu_cuenta"
		android:textColor="@color/black"
		android:textSize="@dimen/_11ssp" />

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_30sdp"
		android:background="@drawable/edit_text_selector"
		android:drawableLeft="@mipmap/ic_email"
		android:layout_gravity="center_vertical"
		android:drawablePadding="@dimen/_5sdp"
		android:hint="Email"
		android:padding="@dimen/_12sdp"
		android:textSize="@dimen/_12ssp" />

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginTop="@dimen/_12sdp"
		android:drawablePadding="@dimen/_5sdp"
		android:hint="Password"
		android:background="@drawable/edit_text_selector"
		android:drawableLeft="@mipmap/ic_contrasena"
		android:padding="@dimen/_12sdp"
		android:textSize="@dimen/_12ssp" />


</LinearLayout>