<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:paddingTop="@dimen/_10ssp"
    android:id="@+id/rvMain"
    android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/txtShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_mtra_purpl"/>

        <com.sdei.parentIn.customViews.MediumTextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtShortName"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorTabNormalText"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Gonzalo Pontevedra" />
        <ImageView
            android:id="@+id/imgAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_attach"
            android:layout_below="@+id/txtName"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toRightOf="@+id/txtShortName"/>

        <com.sdei.parentIn.customViews.RegularTextView
            android:id="@+id/txtshortmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_toRightOf="@+id/imgAttach"
            android:textColor="@color/colorGrayDark"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_10ssp"
            android:text="Toma la primera encuesta aquÃ­"/>

        <com.sdei.parentIn.customViews.SemiBoldTextView
            android:id="@+id/txtMsgDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9ssp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="9/06/19"/>

        <com.sdei.parentIn.customViews.MediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtShortName"
            android:layout_marginTop="@dimen/_6sdp"
            android:textSize="@dimen/_7ssp"
            android:gravity="center"
            android:textColor="@color/colorTabNormalText"
            android:layout_toLeftOf="@+id/btnResponder"
            android:text="Ana Pontevedr"/>

        <com.sdei.parentIn.customViews.SemiBoldTextView
            android:id="@+id/btnResponder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAttach"
            android:layout_toRightOf="@+id/txtShortName"
            android:textSize="@dimen/_8ssp"
            android:text="@string/responder"
            android:foreground="?selectableItemBackground"
            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/style_purpul_ovel"/>


