<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<!--<item name="colorPrimary">@color/colorAccent</item>-->
		<!--<item name="colorPrimaryDark">@color/colorAccent</item>-->
		<item name="colorAccent">@color/colorPrimary</item>
	</style>

	<style name="pullBottomfromTop" parent="@android:style/Theme.Dialog">
		<item name="android:windowAnimationStyle">@style/dilog_slide_top_to_down</item>
	</style>
	<style name="dilog_slide_top_to_down">
		<item name="android:windowEnterAnimation">@anim/slide_up</item>
		<item name="android:windowExitAnimation">@anim/slide_down</item>
	</style>
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">@dimen/_14ssp</item>
	</style>

</resources>
